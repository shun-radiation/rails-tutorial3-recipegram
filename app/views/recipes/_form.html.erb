<%= form_for recipe do |f| %>
  <div class="field">
    <%= f.label :title, "レシピ名", class: "label" %>
    <%= f.text_field :title, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :body, "作り方", class: "label" %>
    <%= f.text_area :body, class: "textarea" %>
  </div>
  <div class="field">
    <%= f.label :image, "写真", class: "label" %>
    <label class="input-wrapper" for="recipe_image">
        <%= f.file_field :image, class: "input-file", style:"width: 100%; max-width:100%;"  %>
    </label>
  </div>
  <%= f.submit '投稿', class: "button is-success" %>
<% end %>